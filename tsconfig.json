{
	"compilerOptions": {
		"lib"                   : [
			"DOM",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ESNext"
		],
		"target"                : "ESNext",
		"module"                : "commonjs",
		"declaration"           : true,
		"emitDecoratorMetadata" : true,
		"experimentalDecorators": true,
		"noImplicitAny"         : false,
		"sourceMap"             : true,
		"strict"                : true,
		"strictNullChecks"      : true,
		"types"                 : ["node"],
		"declarationDir"        : "defs",
		"outDir"                : "dist",
		"baseUrl"               : "src",
		"paths"                 : {
			"@factory"  : ["classes/MarketFactory"],
			"@classes"  : ["classes"],
			"@errors/*" : ["errors/*"],
			"@providers": ["providers"],
			"@types"    : ["types"]
		}
	},
	"include"        : [
		"src/**/*"
	],
	"exclude"        : [
		"defs",
		"dist",
		"node_modules",
		"test"
	],
	"compileOnSave"  : true
}
